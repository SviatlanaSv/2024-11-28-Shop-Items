						"exec": [
							"pm.test(\"Response status is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Response is an array\", function () {\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.be.an('array');\r",
							"});\r",
							"\r",
							"pm.test(\"All items have required fields\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    jsonData.forEach(item => {\r",
							"        pm.expect(item).to.have.property(\"id\").to.be.a('number');\r",
							"        pm.expect(item).to.have.property(\"name\").to.be.a('string');\r",
							"        pm.expect(item).to.have.property(\"description\").to.be.a('string');\r",
							"        pm.expect(item).to.have.property(\"price\").to.be.a('string');\r",
							"    });\r",
							"});\r",
							"\r",
							"pm.test(\"First object matches expected values\", function () {\r",
							"    let jsonData = pm.response.json();  // Парсим ответ в json\r",
							"    console.log(\"Full Response:\", jsonData);  // Логируем весь ответ\r",
							"\r",
							"    // Проверяем, что данные пришли и что это массив\r",
							"    pm.expect(jsonData).to.be.an('array').that.is.not.empty;  // Проверяем, что это массив и он не пустой\r",
							"\r",
							"    // Если массив не пуст, проверим первый элемент\r",
							"    let firstObject = jsonData[0];\r",
							"    console.log(\"First object:\", firstObject);  // Логируем первый объект\r",
							"\r",
							"    // Проверяем значения\r",
							"    pm.expect(firstObject).to.have.property(\"name\", \"Soap\");\r",
							"    pm.expect(firstObject).to.have.property(\"description\", \"White\");\r",
							"    pm.expect(firstObject).to.have.property(\"price\", \"2.00\");\r",
							"});\r",
							"\r",
							"\r",
							"\r",
							""
